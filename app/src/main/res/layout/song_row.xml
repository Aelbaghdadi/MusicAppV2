<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:layout_marginStart="10dp"
        android:text="1"
        android:textSize="20dp"
        android:textStyle="bold"
        android:id="@+id/songNum"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/isfav">
    </TextView>

    <ImageView
        android:layout_width="0dp"
        android:layout_weight="0.1"
        android:layout_height="wrap_content"
        android:src="@drawable/fav"
        android:id="@+id/isfav"
        app:layout_constraintStart_toEndOf="@id/songNum"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/songTitle">
    </ImageView>

    <TextView
        android:layout_width="0dp"
        android:layout_marginStart="10dp"
        android:layout_weight="0.6"
        android:layout_height="wrap_content"
        android:id="@+id/songTitle"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="I Wanna Be Yours"
        app:layout_constraintStart_toEndOf="@id/isfav"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/songDuration">
    </TextView>

    <TextView
        android:layout_width="0dp"
        android:layout_weight="0.2"
        android:layout_height="wrap_content"
        android:id="@+id/songDuration"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="3:04"
        app:layout_constraintStart_toEndOf="@id/songTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
    </TextView>

</LinearLayout>
